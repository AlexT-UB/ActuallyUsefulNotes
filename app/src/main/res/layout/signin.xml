<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="259dp"
        android:layout_height="256dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/logo1" />

    <EditText
        android:id="@+id/usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:hint="Usuario"
        android:layout_below="@id/logo" />

    <EditText
        android:id="@+id/correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:hint="Correo"
        android:layout_below="@id/usuario"  />

    <EditText
        android:id="@+id/contraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:layout_below="@id/correo" />

    <Button
        android:id="@+id/bt_signin"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Crear cuenta"
        android:onClick="cRegistrarse"
        android:layout_below="@id/contraseña" />

    <Button
        android:id="@+id/bt_lay_login"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Ya tengo cuenta"
        android:onClick="cYaTengoCuenta"
        android:layout_below="@id/bt_signin" />

</RelativeLayout>>