<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="259dp"
        android:layout_height="256dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/logo1" />

    <EditText
        android:id="@+id/usuario_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:hint="Usuario"
        android:layout_below="@id/logo" />

    <EditText
        android:id="@+id/contraseña_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:layout_below="@id/usuario_login" />

    <CheckBox
        android:id="@+id/cBRecuerdame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_below="@id/contraseña_login"
        android:text="Recuérdame" />

    <Button
        android:id="@+id/bt_login"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Inicia sesión"
        android:layout_below="@id/cBRecuerdame" />

    <Button
        android:id="@+id/bt_lay_signup"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Crear cuenta"
        android:layout_below="@id/bt_login" />

</RelativeLayout>